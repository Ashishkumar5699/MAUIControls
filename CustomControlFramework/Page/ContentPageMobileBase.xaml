<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomControlFramework.Page.ContentPageMobileBase"
             Title="ContentPageMobileBase">
    <ContentPage.ControlTemplate>
        <ControlTemplate>
            <Grid>
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <ActivityIndicator
                        Margin="4,4"
                        IsRunning="{TemplateBinding ShowActivityIndicator}"
                        IsVisible="{TemplateBinding ShowActivityIndicator}"
                        VerticalOptions="Center"
                        Color="DarkGreen" />
                </StackLayout>
                <ContentPresenter AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All" />
            </Grid>
        </ControlTemplate>
    </ContentPage.ControlTemplate>
</ContentPage>