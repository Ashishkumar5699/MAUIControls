<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="CustomControlFramework.Entry.SignaturePad">
    <VerticalStackLayout>
  <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <mct:DrawingView x:Name="DrawBoard"
                   LineColor="Black"
                   LineWidth="5"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                             HeightRequest="250"
                   IsMultiLineModeEnabled="True"
                   DrawingLineCompleted="DrawBoard_DrawingLineCompleted"
                   BackgroundColor="AliceBlue"/>

            <Image x:Name="ImageView"
                    HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   BackgroundColor="White" HeightRequest="200"/>

            <Button Text="Clear Board" Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
    </VerticalStackLayout>
</ContentView>

